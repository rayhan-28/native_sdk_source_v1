{
  "name": "practice-native-sdk",
  "version": "0.3.15",
  "description": "simple react native package",
  "source": "./src/index.tsx",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.json",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "publish": "echo Publishing package...",
    "example": "yarn workspace practice-native-sdk-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it",
    "build": "tsc"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rayhan-28/practice-native-sdk.git.git"
  },
  "author": "jahir.rayhan <jahir.rayhan@bedatasolutions.com> (https://github.com/rayhan-28/practice-native-sdk.git)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rayhan-28/practice-native-sdk.git/issues"
  },
  "homepage": "https://github.com/rayhan-28/practice-native-sdk.git#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
     "prettier": "^3.3.3",
    "@babel/core": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.3.12",
    "@types/react-native": "^0.72.8",
    "axios": "^1.6.8",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-native": "^4.1.0",
    "expo-clipboard": "^7.0.0",
    "expo-linear-gradient": "^14.0.1",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "react": "^18.3.1",
    "react-native": "^0.76.1",
    "react-native-builder-bob": "^0.31.0",
    "react-native-reanimated": "^3.16.3",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "^5.6.3"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "expo-clipboard": "*",
    "expo-linear-gradient": "*",
    "react": "*",
    "react-native": "*",
    "react-native-reanimated": "*",
    "react-native-svg": "*"
  },
  "workspaces": ["packages/*"],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "create-react-native-library": {
    "type": "view-legacy",
    "languages": "kotlin-swift",
    "version": "0.43.0"
  },
  "dependencies": {
    "@expo/metro-runtime": "~4.0.0",
    "expo": "^52.0.6",
    "expo-image-manipulator": "^13.0.5",
    "expo-image-picker": "^16.0.2",
    "react-dom": "18.3.1",
    "react-native-svg": "^13.9.0",
    "react-native-web": "~0.19.13"
  }
}
